<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".IS.Popup"
    android:orientation="vertical"
    android:layout_gravity="center_horizontal"
    android:gravity="center_horizontal">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/btn_discontrol"
        android:layout_marginBottom="-48dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_popup"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_gravity="center_horizontal"
                android:padding="10dp"
                android:src="@drawable/icn_chevron_down" />

            <TextView
                android:id="@+id/tv_popup_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:padding="10dp"
                android:text="title"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_popup_affect"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:padding="5dp"
                android:text="affect"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/tv_popup_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:lineHeight="24sp"
                android:padding="10dp"
                android:text="afdasdadas dasdasd as das dasd asd adadasdada da dasd af gsagsd gfect"
                android:textSize="18sp" />

        </LinearLayout>

    </ScrollView>

    <Button
        android:textSize="18sp"
        android:textColor="#cc3123"
        android:layout_margin="10dp"
        android:background="#ffffee"
        android:layout_alignParentBottom="true"
        android:id="@+id/btn_discontrol"
        android:text="Disease Control Methods"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</RelativeLayout>