<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".IS.DiseaseType">

    <TextView
        android:id="@+id/tv_main_title2"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Diseases"
        android:textSize="28dp"/>

    <LinearLayout
        android:layout_below="@+id/tv_main_title2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <Button
            android:id="@+id/btn_distype_leaf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Diseases of Leaf" />

        <Button
            android:id="@+id/btn_distype_fruit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Diseases of Fruit" />


    </LinearLayout>


</RelativeLayout>